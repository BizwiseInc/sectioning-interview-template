{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "outDir": "build",
    "lib": ["ESNext"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules" // Exclude node_modules directory
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}

